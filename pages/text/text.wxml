<!--pages/text/text.wxml-->
<!-- text组件：类似span标签，是行内元素  -->
<!-- 1.基本使用 -->
<text>hello zww</text>
<text>hello lq\n</text>
<text>\\n换行\n</text>

<!-- 2.selectable：默认情况下text中的文本长按是不能选中 -->
<text selectable="{{false}}">不能选中\n</text>
<text selectable="{{true}}">可以选中\n</text>
<text selectable>也可以选中\n</text>

<!-- 3.space：决定文本空格的大小 -->
<text>hello world\n</text>
<text space="nbsp">hello world\n</text>
<text space="ensp">hello world\n</text>
<text space="emsp">hello world\n</text>

<!-- 4.decode：是否解码文本 -->
<text>2 &gt; 1\n</text>
<text decode>2 &gt; 1</text>