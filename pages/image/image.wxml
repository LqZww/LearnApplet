<!-- 3.相册中的图片 -->
<button bindtap="handleChooseAlbum">选择图片</button>
<image src="{{imagePath}}"></image>

<!-- 4.bindload：监听图片加载完成；lazy-load：图片懒加载 -->
<image wx:for="{{8}}" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" bindload="handleImageLoad" lazy-load />

<!-- 5.show-menu-by-longpress：长按图片出现识别小程序码 -->
<image src="/assets/img.jpg" show-menu-by-longpress />
