<!-- slot的使用 -->
<!-- 单个插槽 -->
<my-slot>
	<text>主要内容</text>
</my-slot>

<view>+++++++++++</view>
<!-- 多个插槽 -->
<!-- 
  注意：
    1.给每一个插槽起名字：name属性
    2.必须在Component对象中添加一个选项：options => multipleSlots
 -->
<my-mslot>
	<button size="mini" slot="slot2">按钮</button>
	<slider slot="slot1"></slider>
</my-mslot>